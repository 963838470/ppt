<Window x:Class="Runner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="奔跑" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0">
            <Image Height="150" Width="100" x:Name="img1" Margin="0 60 0 0"></Image>
        </Canvas>
        <Canvas Grid.Row="1">
            <Button Content="&lt;&lt;" x:Name="btnSlow" Canvas.Left="211" Canvas.Top="6" Click="btnSlow_Click"></Button>
            <Label x:Name="lblSpeed" Canvas.Left="237" Canvas.Top="6"></Label>
            <Button Content=">>" x:Name="btnUp" Canvas.Left="276" Canvas.Top="6" Click="btnUp_Click"></Button>
        </Canvas>
    </Grid>
</Window>
